{
    // 拼写检查 
    // 语料库 基础通用化配置
    "import": ["@cspell/dict-lorem-ipsum/cspell-ext.json"],
    // 大小写是否敏感
    "caseSensitive": false,
    // 用户自定义字典
    "dictionaries": ["custom-words"],
    "dictionaryDefinitions": [
        {
            "name": "custom-words",
            "path": "./.cspell/custom-words.txt",
            "addWords": true
        }
    ],
    "ignorePaths": [
        "**/node_modules/**",
        "**/dist/**",
        "**/lib/**",
        "**/docs/**",
        "**/stats.html",
        "**/language/**",
        "**/language.ts",
        "**/package.json",
        "**/*.md",
        "eslint.config.js",
        "packages/browser-utils/src/metrics/**/*",
        ".gitignore"
    ]
}
